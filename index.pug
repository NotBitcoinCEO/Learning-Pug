    .map.circle-graphic
      .layer.ellipses
        .ellipsis
        .ellipsis
        .ellipsis
        .circle.is-cover
      .layer
        .circle.is-second
      .layer
        .circle.is-third
      .layer
        - let i = 1;
        each module in modules
          if(!module.main)
            .module
              .circle.node(data-info=module data-index=i++)
                .subtitle innou
                h4.title.is-4=module.title
              .leaf
      .layer
        .circle.node.is-main(data-info=modules[0] data-index=0)
          h2.title.is-2=modules[0].title
          .subtitle.is-strong=modules[0].subtitle
          
    .modal#introModal
      .modal-background#introModalBackground
      .modal-card
        header.modal-card-head
          .modal-card-title
            span INNOU 
            span.is-strong#introModalTitle
          button.delete#introModalClose(aria-label='close')
        section.modal-card-body
          .columns
            .column
              p#introModalDescription
            .column.is-flex
              i#introModalIcon
        footer.modal-card-foot.has-content-centered
          button.button#introModalPrev
            i.fas.fa-chevron-left
          button.button#introModalNext
            i.fas.fa-chevron-right

